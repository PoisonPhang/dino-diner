<Page x:Class="PointOfSale.ComboSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ComboSelection">

    <Grid>
        <WrapPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="MinWidth" Value="150"/>
                    <Setter Property="MinHeight" Value="50"/>
                    <Setter Property="Margin" Value="10"/>
                </Style>
            </WrapPanel.Resources>
            <Button Click="CustomizeCombo">Brontowurst Combo</Button>
            <Button Click="CustomizeCombo">Dino-Nuggets Combo</Button>
            <Button Click="CustomizeCombo">Steakosaurus Combo</Button>
            <Button Click="CustomizeCombo">T-Rex King Burger Combo</Button>
            <Button Click="CustomizeCombo">Prehistoric PB&amp;J Combo</Button>
            <Button Click="CustomizeCombo">Pterdactyl Wings Combo</Button>
            <Button Click="CustomizeCombo">Veloci-Wrap Combo</Button>
        </WrapPanel>
    </Grid>
</Page>
