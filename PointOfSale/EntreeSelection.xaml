<Page x:Class="PointOfSale.EntreeSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EntreeSelection">

    <WrapPanel Orientation="Horizontal">
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="MinWidth" Value="150"/>
                <Setter Property="MinHeight" Value="50"/>
                <Setter Property="Margin" Value="10"/>
            </Style>
        </WrapPanel.Resources>
        <Button>Brontowurst</Button>
        <Button>Dino-Nuggets</Button>
        <Button>Prehistoric PB&amp;J</Button>
        <Button>Pterodactyl Wings</Button>
        <Button>Steakosarus Burger</Button>
        <Button>T-Rex King Burger</Button>
        <Button>Veloci-Wrap</Button>
    </WrapPanel>
</Page>
