<Page x:Class="PointOfSale.FlavorSelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="FlavorSelection">

    <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
        <WrapPanel.Resources>
            <Style TargetType="Button">
                <Setter Property="Margin" Value="10"/>
                <Setter Property="Width" Value="150"/>
                <Setter Property="Height" Value="50"/>
            </Style>
        </WrapPanel.Resources>

        <Button Click="OnFlavorSelect" Tag="Cherry">Cherry</Button>
        <Button Click="OnFlavorSelect" Tag="Chocolate">Chocolate</Button>
        <Button Click="OnFlavorSelect" Tag="Cola">Cola</Button>
        <Button Click="OnFlavorSelect" Tag="Lime">Lime</Button>
        <Button Click="OnFlavorSelect" Tag="Orange">Orange</Button>
        <Button Click="OnFlavorSelect" Tag="RootBeer">Root Beer</Button>
        <Button Click="OnFlavorSelect" Tag="Vanilla">Vanilla</Button>
    </WrapPanel>
</Page>
